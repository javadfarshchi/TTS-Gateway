# Application settings
APP_ENV=development
LOG_LEVEL=INFO

# Server settings
HOST=0.0.0.0
PORT=8000
WORKERS=1
RELOAD=True

# API settings
API_PREFIX=/api/v1
DOCS_URL=/docs
REDOC_URL=/redoc
OPENAPI_URL=/openapi.json

# TTS settings
DEFAULT_PROVIDER=mock
DEFAULT_VOICE=en-US-Wavenet-A
DEFAULT_LANGUAGE=en
DEFAULT_SAMPLE_RATE=16000

# Audio settings
MAX_AUDIO_DURATION=600  # seconds
MAX_TEXT_LENGTH=5000

# CORS settings (comma-separated list of origins, or "*" for all)
CORS_ORIGINS=*

# Uncomment and configure if you add a database
# DATABASE_URL=postgresql://user:password@localhost:5432/tts_gateway

# Uncomment and configure if you add authentication
# JWT_SECRET=your-secret-key-here
# JWT_ALGORITHM=HS256
# JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Uncomment and configure if you add Redis for caching
# REDIS_URL=redis://localhost:6379/0
